# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET   	/registration	            controllers.Application.toRegistration()
POST	/			                controllers.Application.registration()
POST	/admin				        controllers.Application.registerRestaurant()
GET	    /login		                controllers.Application.toLogin()
POST	/user				        controllers.Application.login()
GET		/user						controllers.Application.toUser()
GET     /logout                     controllers.Application.logout()
GET     /admin                      controllers.Application.login()
GET     /restaurant                 controllers.Application.login()
POST    /restaurant	                controllers.RestaurantController.createMeal()
GET     /confirm/:confirmationString                 controllers.Validate.validateEmail(confirmationString: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
GET 	/webjars/*file 				controllers.WebJarAssets.at(file)