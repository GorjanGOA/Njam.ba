# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET   	/registration	            controllers.Application.toRegistration()
POST	/			                controllers.Application.registration()
GET	    /login		                controllers.Application.toLogin()
POST	/user			            controllers.Application.login()
GET     /logout                     controllers.Application.logout()
GET     /meals                      controllers.RestaurantController.list()
GET     /meals/:id                  controllers.RestaurantController.details(id: Int)
POST    /meals/new                  controllers.RestaurantController.createMeal()
GET     /restaurant                 controllers.Restaurant.list()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
